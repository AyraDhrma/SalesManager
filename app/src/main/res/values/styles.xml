<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TitleLabel">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/colorFontPrimary</item>
    </style>

    <style name="SubTitleLabel">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorFontPrimary</item>
    </style>

    <style name="DescriptionTitleLabel">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorFontPrimary</item>
    </style>

    <style name="DescriptionLabel">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorFontPrimary</item>
    </style>

    <style name="AppTheme.Scanner" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/rubik_black</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>